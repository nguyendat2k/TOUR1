@model TOUR.Models.ThanhVien
    @using TOUR.Models

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/Layout_Order.cshtml";
}

<h2>Điền Thông Tin Các Thành Viên Trong Phiếu Đoàn</h2>
@using (Html.BeginForm("Create", "ThanhVien", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()


<div class="form-horizontal">
    <h4>Tour</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(model => model.STT, "STT", htmlAttributes: new { @class = "control-label col-md-2" })
