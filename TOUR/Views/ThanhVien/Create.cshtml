            @Html.DropDownList("MaDoan")
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Hoàn Tất Đăng Ký" />

        </div>
    </div>
</div>
}


<div>
