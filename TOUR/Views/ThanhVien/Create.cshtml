            @Html.ValidationMessageFor(model => model.SDTTV2, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        @Html.LabelFor(model => model.MaDoan, htmlAttributes: new { @class = "control-label col-md-2" })
